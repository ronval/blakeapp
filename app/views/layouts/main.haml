!!! 5
%html(lang="en-US")
  %head
    %title Martin Valencia's Portfolio
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
    %meta(http-equiv="X-UA-Compatible" content="IE=edge")
    %style{:media => "print", :type => "text/css"}
      :cdata
        \.dontprint
        { display: none; }

    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag "hyper", media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag "application", 'data-turbolinks-track': 'reload'

  %body.loading
    = render 'shared/messages'
    #detached-topbar-placeholder
    / Begin page
    .wrapper
      #vertical-sidebar-placeholder
      #detached-sidebar-placeholder
      / ==============================================================
      / Start Page Content here
      / ==============================================================
      .content-page
        .content
          #vertical-topbar-placeholder
          = render 'shared/top_menu_bar', object: @user
          / Start Content


          = yield
    = render 'shared/dashboard_side_menu', object: @user
  %footer
    / = render 'shared/footer'
