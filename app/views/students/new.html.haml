.container.top-buffer
  .card  
    .card-body
      %h4.mb-3.header-title ADD Student
      .col-lg-12
        =bootstrap_form_for @student do |f|
          =f.text_field :full_name, label:"Full Name"
          =f.email_field :email, label:"Email"
          =f.select :subject_id, options_for_select(@subjects.collect{ |subject| [subject.name, subject.id] }), { label: "Please pick a subject"}
    
            
    
          =f.submit "Create Class", class: "btn btn-primary"


      
